@require 'Globals'
@require 'icons.css'

noselect() {
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}

.flexbox {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 90vh;
}

.flexbox-column {
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

body {
  background-color: #d3d3d3;
}

